                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var cus in list_customer.Take(3))
            {
                <div class="col-md-4 mt-md-0 mt-5">
                    <div class="customer-single pr-lg-4">
                        <blockquote style="min-height: 120px">
                            @cus.Customer_Comment.Substring(0,100) .....
                        </blockquote>
                        <div class="customer-img d-flex align-items-center mt-4">
                            <img src="@cus.Customer_Avatar" style="width:100px;height: 100px" class="img-fluid mr-3" alt="" />
                            <div class="customer-info">
                                <h6>@cus.Customer_Name</h6>
                                <small class="mb-0">@cus.Customer_Email</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
